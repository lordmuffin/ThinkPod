{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@thinkpod/shared/*": ["packages/shared/src/*"],
      "@thinkpod/api/*": ["packages/api/src/*"],
      "@thinkpod/web/*": ["packages/web/*"],
      "@thinkpod/mobile/*": ["packages/mobile/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/app/**/*",
    "packages/*/**/*.ts",
    "packages/*/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "packages/*/node_modules",
    "packages/*/dist",
    "packages/*/build",
    "packages/*/.next",
    "packages/*/coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/api"
    },
    {
      "path": "./packages/web"
    },
    {
      "path": "./packages/mobile"
    }
  ]
}